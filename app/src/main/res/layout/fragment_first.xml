<!--            app:layout_constraintStart_toStartOf="parent">-->


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_above="@id/shareCabBtn"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/car_icon">

                    </ImageView>

                    <LinearLayout
                        android:id="@+id/chatLLMsg"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/transparent"
                        android:layout_alignParentBottom="true">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/icons"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="5dp"
                            app:cardMaxElevation="5dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:paddingEnd="15dp"
                                android:layout_gravity="center"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:orientation="horizontal">


                                <EditText
                                    android:id="@+id/edSearchCab"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:hint="search for a cab"
                                    android:layout_marginStart="5dp"
                                    android:maxLines="1"
                                    android:backgroundTint="@color/icons"/>


                                <ImageView
                                    android:id="@+id/search"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_baseline_search_24"
                                    app:tint="@color/black">

                                </ImageView>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/shareCabRecyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp">

                    </androidx.recyclerview.widget.RecyclerView>



                </LinearLayout>

                <Button
                    android:id="@+id/shareCabBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="75dp"
                    android:text="share a cab"
                    app:cornerRadius="10dp">

                </Button>

            </RelativeLayout>



<!--        </FrameLayout>-->
